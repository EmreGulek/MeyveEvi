@model List<basics.Models.Product>
@{
Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/navbar-color.css">
    <title>Product/List</title>
</head>
<body>

<header>
    <nav id="navbar-example2" class="navbar bg-light px-3 mb-3 d-flex justify-content-between align-items-center">
      

        <a class="navbar-brand " href="#">
            <img src="~/img/MeyveEvi_Logo.jpeg" alt="MeyveEvi_logo" style="border-radius: 80px; width: 60px;">
        </a>

        <ul class="nav nav-pills">
            @foreach (var product in Model)
            {
            <li class="nav-item">
                <a class="nav-link" href="#@product.Id">@product.Title</a>
            </li>
            }
        </ul>
    </nav>
</header>



<div class="container mt-3">
    <div data-bs-spy="scroll" data-bs-target="#navbar-example2" data-bs-smooth-scroll="true" class="scrollspy-example bg-light p-3 rounded-2" tabindex="0">
        <main>
            @foreach (var product in Model)
{
    <div class="card mb-3" id="@product.Id">
        <div class="row">
            <div class="col-md-4">
                <img src="~/img/@product.Image" class="img-fluid rounded-start" alt="" style="width: 300px">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>
                    
                    <div class="accordion" id="accordion-@product.Id">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne-@product.Id">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne-@product.Id" aria-expanded="true" aria-controls="collapseOne-@product.Id" >
                                   @product.Title Nasıl Bir Meyvedir?
                                </button>
                            </h2>
                            <div id="collapseOne-@product.Id" class="accordion-collapse collapse show" aria-labelledby="headingOne-@product.Id" data-bs-parent="#accordion-@product.Id">
                                <div class="accordion-body">
                                    <p>@product.Description</p> 
                                   
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingTwo-@product.Id">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo-@product.Id" aria-expanded="false" aria-controls="collapseTwo-@product.Id">
                                <p>@product.Title Nerede Üretilir ? </p>
                                    </button>
                            </h2>
                            <div id="collapseTwo-@product.Id" class="accordion-collapse collapse" aria-labelledby="headingTwo-@product.Id" data-bs-parent="#accordion-@product.Id">
                                <div class="accordion-body">
                                    <p>@product.placeProduction</p>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingThree-@product.Id">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree-@product.Id" aria-expanded="false" aria-controls="collapseThree-@product.Id">
                                  @product.Title  İçerisindeki Vitaminler
                                </button>
                            </h2>
                            <div id="collapseThree-@product.Id" class="accordion-collapse collapse" aria-labelledby="headingThree-@product.Id" data-bs-parent="#accordion-@product.Id">
                                <div class="accordion-body">
                                    @product.Vitamin
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

        </main>
        
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>